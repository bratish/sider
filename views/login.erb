<div class="span-11 box">
  <h2>Login</h2>
  
  <% if @login_error %>
    <div class="error">
      <%= @login_error %>
    </div>
  <% end %>
  
  <form action="/login" method="post">
    <table>
      <tr>
        <td>username</td>
        <td><input name="username" /></td>
      </tr>
      <tr>
        <td>password</td>
        <td><input type="password" name="password" /></td>
      </tr>
    </table>
    <input type="submit" value="Log in" />
  </form>
</div>


